    "type": "library",
    "keywords": [
        "INVOICE",
        "e-invocing",
        "Qr",
        "qr-code"
    ],
    "homepage": "https://github.com/Qr/invoice",
    "license": "MIT",
    "authors": [
        {
            "name": "Qr Team",
            "email": "support@Qr.dev",
            "homepage": "https://Qr.dev"
        }
    ],
    "support": {
        "issues": "https://github.com/Qr/invoice/issues",
        "source": "https://github.com/Qr/invoice"
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^7.2 || ^7.3 || ^7.4 || ^8.0",
        "ext-mbstring": "*",
        "chillerlan/php-qrcode": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.0"
